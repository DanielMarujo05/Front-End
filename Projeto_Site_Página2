  <script>
    function calcularTotal() {
      var quantidadeProduto1 = parseInt(document.getElementById('quantidadeProduto1').value) || 0;
      var quantidadeProduto2 = parseInt(document.getElementById('quantidadeProduto2').value) || 0;
      var quantidadeProduto3 = parseInt(document.getElementById('quantidadeProduto3').value) || 0;

      var precoProduto1 = 167;
      var precoProduto2 = 124;
      var precoProduto3 = 240;

      var total = quantidadeProduto1 * precoProduto1 + quantidadeProduto2 * precoProduto2 + quantidadeProduto3 * precoProduto3;
      
      document.getElementById('total').innerHTML = 'Total: R$' + total.toFixed(2);
      
    }
  </script>

