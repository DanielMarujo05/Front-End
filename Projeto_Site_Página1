<script>

  let indiceAtual = 0;
  const totalDeImagens = 5;

  function exibirImagem(indice) {
    const container = document.querySelector('.containerImg');
    const novaPosicao = -indice * 100 + '%';
    container.style.transform = 'translateX(' + novaPosicao + ')';
  }

  function proximaImagem() {
    indiceAtual = (indiceAtual + 1) % totalDeImagens;
    exibirImagem(indiceAtual);
  }

  function imagemAnterior() {
    indiceAtual = (indiceAtual - 1 + totalDeImagens) % totalDeImagens;
    exibirImagem(indiceAtual);
  }
    
</script>

